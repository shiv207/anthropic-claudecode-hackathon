body {
  font-family: 'Arial', sans-serif;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

#content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 50px;
}

#animation-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  display: none;
}

.dream-big {
  font-size: 5rem;
  font-weight: bold;
  color: #fff;
  position: absolute;
  top: -100%;
  animation: sprayAnimation 5s forwards;
}

@keyframes sprayAnimation {
  to {
    top: 50%;
    opacity: 1;
  }
}


JavaScript (script.js):

let inactivityTimer;

function startInactivityTimer() {
  clearTimeout(inactivityTimer);
  inactivityTimer = setTimeout(startAnimation, 5000); // Trigger after 5 seconds of inactivity
}

function startAnimation() {
  const animationContainer = document.getElementById('animation-container');
  animationContainer.style.display = 'block';
}

function resetInactivityTimer() {
  startInactivityTimer();
}

document.body.addEventListener('mousemove', resetInactivityTimer);
document.body.addEventListener('keypress', resetInactivityTimer);
document.body.addEventListener('scroll', resetInactivityTimer);

startInactivityTimer(); // Initialize timer


